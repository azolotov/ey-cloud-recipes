check process delayed_job
  with pidfile /var/run/engineyard/dj/<%= @app_name %>/dj_<%= @worker_name %>.pid
  start program = "/engineyard/bin/dj <%= @app_name %> start production <%= @worker_name %>"
  stop program = "/engineyard/bin/dj <%= @app_name %> stop production <%= @worker_name %>"
  group dj_<%= @app_name %>